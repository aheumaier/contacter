<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      <%= @company.name %>
      <small>
        <%= link_to "URL", "http://"+@company.website.to_s  if @company.website %>,
        <%= @company.vertical.upcase if @company.vertical   %>
      </small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
      <li class="active">Here</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content container-fluid">

    <p id="notice"><%= notice %></p>

    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">
          <%= @company.addresses.count %> Adresses

        </h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
            <i class="fa fa-minus"></i></button>
        </div>
      </div>
      <div class="box-body">


        <table class="table table-striped">
          <thead>
          <tr>
            <th style="width: 10px">#</th>
            <th>Description</th>
            <th>Street</th>
            <th>City</th>
            <th style="width: 40px">ZIP</th>
            <th>Country</th>
          </tr>
          </thead>

          <tbody>
          <% @company.addresses.each_with_index do |address, index| %>
              <td><%= index+1  %>.</td>
              <td><%= address.description %></td>
              <td><%= address.street %></td>
              <td><%= address.city %></td>
              <td><%= address.zip %></td>
              <td><%= address.country %></td>
              <td><span class="badge bg-yellow">70%</span></td>
              <td><%= link_to 'Show', address_path(address) %> |</td>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        Footer
      </div>
      <!-- /.box-footer-->
    </div>

    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">
          <%= @company_contacts.count %> Contacts
          <small>
            Others things
          </small>
        </h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
            <i class="fa fa-minus"></i></button>
        </div>
      </div>
      <div class="box-body">

        <table class="table table-striped">
          <thead>
          <tr>
            <th style="width: 40px">#</th>
            <th>FirstName</th>
            <th>Lastname</th>
            <th>Postition</th>
            <th>email</th>
            <th>Mobile</th>
            <th style="width: 40px">Label</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @company_contacts.each_with_index do |contact, index| %>
              <td><%= index+1  %>.</td>
              <td><%= contact.fname %></td>
              <td><%= contact.lname %></td>
              <td><%= contact.position %></td>
              <td><%= contact.email %></td>
              <td><%= contact.mobile %></td>
              <td><span class="badge bg-yellow">70%</span></td>
              <td><%= link_to 'Show', contact_path(contact) %> |</td>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        Footer
      </div>
      <!-- /.box-footer-->
    </div>

    <%= link_to 'Edit', edit_company_path(@company) %> |
    <%= link_to 'Back', companies_path %>

  </section>
  <!-- /.content -->
</div>
